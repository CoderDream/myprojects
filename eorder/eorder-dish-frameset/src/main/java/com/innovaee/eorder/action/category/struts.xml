<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
                        "http://struts.apache.org/dtds/struts-2.0.dtd">
<struts>
    <package name="com.innovaee.eorder.action.category" namespace="/category"
        extends="struts-base">

        <action name="category" class="com.innovaee.eorder.action.category.CategoryAction"
            method="category">
            <result name="input">/pages/category/category.jsp</result>
            <result name="success">/pages/category/category.jsp</result>
        </action>

        <action name="edit" class="com.innovaee.eorder.action.category.CategoryAction"
            method="edit">
            <result name="input">/pages/category/categoryEdit.jsp</result>
            <result name="success">/pages/category/categoryEdit.jsp</result>
        </action>

        <action name="add" class="com.innovaee.eorder.action.category.CategoryAction"
            method="add">
            <result name="input">/pages/category/categoryEdit.jsp</result>
            <result name="success">/pages/category/categoryEdit.jsp</result>
        </action>

        <action name="save" class="com.innovaee.eorder.action.category.CategoryAction"
            method="save">
            <result name="input">/pages/category/categoryEdit.jsp</result>
            <result name="success">/pages/category/categoryEdit.jsp</result>
        </action>

        <action name="update" class="com.innovaee.eorder.action.category.CategoryAction"
            method="update">
            <result name="input">/pages/category/categoryEdit.jsp</result>
            <result name="success">/pages/category/categoryEdit.jsp</result>
        </action>

        <action name="remove" class="com.innovaee.eorder.action.category.CategoryAction"
            method="remove">
            <result name="input">/pages/category/category.jsp</result>
            <result name="success">/pages/category/category.jsp</result>
        </action>
    </package>

</struts>