<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
                        "http://struts.apache.org/dtds/struts-2.0.dtd">
<struts>
    <package name="com.innovaee.eorder.web.action.admin.user" namespace="/user"
        extends="struts-base">

        <result-types>
            <result-type name="tiles"
                class="org.apache.struts2.views.tiles.TilesResult" />
        </result-types>

        <action name="edit" class="com.innovaee.eorder.action.user.UserAction"
            method="edit">
            <result name="input" type="tiles">user</result>
            <result type="tiles">user</result>
        </action>

        <action name="user" class="com.innovaee.eorder.action.user.UserAction"
            method="user">
            <result type="tiles">user</result>
        </action>

        <action name="edit" class="com.innovaee.eorder.action.user.UserAction"
            method="edit">
            <result name="input" type="tiles">userEdit</result>
            <result type="tiles">userEdit</result>
        </action>

        <action name="add" class="com.innovaee.eorder.action.user.UserAction"
            method="add">
            <result name="input" type="tiles">userEdit</result>
            <result type="tiles">userEdit</result>
        </action>

        <action name="remove" class="com.innovaee.eorder.action.user.UserAction"
            method="remove">
            <result name="input" type="tiles">user</result>
            <result type="tiles">user</result>
        </action>

        <action name="save" class="com.innovaee.eorder.action.user.UserAction"
            method="save">
            <result name="input" type="tiles">userEdit</result>
            <result type="tiles">userEdit</result>
        </action>

        <action name="update" class="com.innovaee.eorder.action.user.UserAction"
            method="update">
            <result name="input" type="tiles">userEdit</result>
            <result type="tiles">userEdit</result>
        </action>
    </package>

</struts>